namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"
namespace local = ""
namespace ns1 = "http://www.cap.org/pert/2009/01/"
namespace ns10 = "http://www.cap.org/pert/2009/01/colon/"
namespace ns2 = "http://www.rsna.org/reporting/2009/01/"
namespace ns3 = "http://www.cap.org/pert/2009/01/stomach/"
namespace ns4 = "http://www.cap.org/pert/2009/01/pancreas/"
namespace ns5 = "http://www.cap.org/pert/2009/01/endometrium/"
namespace ns6 = "http://www.cap.org/pert/2009/01/breast/"
namespace ns7 = "http://www.cap.org/pert/2009/01/prostate/"
namespace ns8 = "http://www.w3.org/2003/g/data-view#"
namespace ns9 = "http://www.cap.org/pert/2009/01/lung/"
namespace xi = "http://www.w3.org/2001/XInclude"


## == COMMON CONTENT ==
div {
   common.content = common.standard.content & common.custom.content
   common.standard.content = comment? & label? & \text*
   common.custom.content = (anyForeignElement | anyUserAttribute)*
   anyForeignElement =
      element * - (local:* | ns1:* | ns6:* | ns10:* | ns9:* | ns7:* | ns4:* | ns3:* | ns5:* | ns8:* | ns2:*) {
         (anyForeignAttribute | anyForeignElement)*
      }
   anyForeignAttribute =
      attribute * - (ns1:* | ns6:* | ns10:* | ns9:* | ns7:* | ns4:* | ns3:* | ns5:* | ns8:* | ns2:*) { text }
   
   ## Any attribute in a non-null namespace other than the CAP eCC
   ##             namespaces
   anyUserAttribute =
      attribute * - (local:* | ns1:* | ns6:* | ns10:* | ns9:* | ns7:* | ns4:* | ns3:* | ns5:* | ns8:* | ns2:*) { text }
}

## == BASE ELEMENTS ==
div {
   comment = element comment { text, common.custom.content }
   label = element label { text, common.custom.content }
   \text =
      element text {
         mixed { common.content }
      }
}

## == COMMON ELEMENTS ==
div {
   laterality =
      grammar {
         include "common-result.rnc" {
            valueset = parent common.laterality.values
         }
      }
   length.content =
      element unit { common.lengthUnit.values }
      & grammar {
           include "common-result.rnc" {
              valueset = xsd:decimal { minExclusive = "0.0" }
           }
        }
   dimension = element dimension { length.content & common.content }
   length = element length { length.content & common.content }
   common.size = element size { common.sizeContent & common.content }
   common.sizeContent = dimension, (dimension, dimension?)?
}
