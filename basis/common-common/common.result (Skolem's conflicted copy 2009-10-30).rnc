default namespace = "http://www.cap.org/pert/2009/01/"
namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

start |= element result { result.attrib, result.content }
result.attrib &= empty
result.content &=
   element value { valueset, value.attrib }
   & element otherValue { otherValue.attrib, xsd:token }?
   & parent common.content
value.attrib &=
   attribute modifier { "less than" | "less than or equals" | "equals" | "greater than or equals" | "greater than" }?,
   parent anyUserAttribute*
otherValue.attrib &= parent anyUserAttribute*
valueset |= xsd:token
