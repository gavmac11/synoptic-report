<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
	xmlns="http://relaxng.org/ns/structure/1.0"
	xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<a:documentation>This file does two things: (1) This file imports
		"synopsis.rng", which contains the definitions of all the attributes and
		elements necessary to construct a skeleton eCC report. (Note that
		"synopsis.rng" does not define any specific report type; in particular, it
		does not specify which of the available sections are required, which are
		optional, and which are not to be used.) (2) This file defines which
		sections should be combined to construct a TUMOR RESECTION REPORT; with
		what optionality; and in what order.</a:documentation>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<include href="components/synopsis.rng">
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		<a:documentation>This line includes (imports)
			"synopsis.rng".</a:documentation>
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	</include>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<define name="synopsis.content">
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		<a:documentation>This definition specifies the choice, order and
			optionality of sections that constitute a TUMOR RESECTION
			REPORT.</a:documentation>
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		<ref name="clinical"/>
		<ref name="specimen"/>
		<ref name="tumor"/>
		<ref name="extent"/>
		<ref name="margins"/>
		<optional>
			<ref name="accessory"/>
		</optional>
		<optional>
			<ref name="nodes"/>
		</optional>
		<optional>
			<ref name="metastases"/>
		</optional>
		<optional>
			<ref name="studies"/>
		</optional>
		<ref name="stage"/>
		<optional>
			<ref name="additional"/>
		</optional>
	</define>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
</grammar>
