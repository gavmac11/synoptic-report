<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="../../report/cap-cancer/resection/resection@colon.rng" type="xml"?>
<?oxygen SCHSchema="../../rules/cap-cancer/resection@colon.sch"?>
<synopsis grddl:transformation="http://www.cap.org/pert/2009/01/semantics/snomed/prostate@resection.xslt"
    pert:schemaLocation="http://www.cap.org/pert/2009/01/resection@colon.rng" pert:version="2009-01-01"
    xmlns="http://www.cap.org/pert/2009/01/" xmlns:cerner="http://www.cerner.com/"
    xmlns:colon="http://www.cap.org/pert/2009/01/colon/" xmlns:grddl="http://www.w3.org/2003/g/data-view#"
    xmlns:pert="http://www.cap.org/pert/2009/01/">
    <comment xml:lang="en">This synopsis demonstrates the resection@colon.rng schema</comment>
    <displayText>SYNOPTIC REPORT</displayText>
    <clinical>
        <comment>Might want to provide wrapper for free text</comment>
        <displayText>Clinical History</displayText>
        <priorTherapies>
            <priorTherapy date="2008-05" description="Chemoirradiation"/>
        </priorTherapies>
    </clinical>
    <specimen>
        <displayText>Specimen</displayText>
        <procedures>
            <procedure value="abdominoperineal resection">
                <comment>In this example this procedure was an A-P resection</comment>
            </procedure>
        </procedures>
        <sites>
            <displayText>What is the site?</displayText>
            <site value="rectum"/>
            <site value="sigmoid colon"/>
        </sites>
        <tumorLocations>
            <tumorLocation value="rectum"/>
        </tumorLocations>
        <colon:polyp>
            <colon:configuration value="pedunculated"/>
            <colon:size unit="cm" value="1.3"/>
        </colon:polyp>
        <integrity value="fragmented"/>
        <size dimension-1="23" unit="cm"/>
    </specimen>
    <tumor>
        <histologicTypes>
            <histologicType other-value="linguinioma" value="other"/>
        </histologicTypes>
        <grade gradingSystem="WHO" value="high"/>
        <colon:immuneResponse>
            <colon:intratumoralResponse value="marked"/>
            <colon:peritumoralResponse value="marked"/>
        </colon:immuneResponse>
        <colon:suggestMicrosatelliteInstability>
            <colon:highGrade value="negative"/>
            <colon:medullaryComponent value="positive"/>
            <colon:mucinousComponent percentage="50" value="positive"/>
        </colon:suggestMicrosatelliteInstability>
        <colon:tumorPerforation value="negative"/>
    </tumor>
    <extent>
        <invasion>
            <colon:deepestInvasion value="muscularis propria">
                <colon:adjacentStructure extent="adheres" value="pelvic sidewall"/>
            </colon:deepestInvasion>
        </invasion>
        <tumorSize dimension-1="2.1" dimension-2="2.0" dimension-3="1.2" unit="cm"/>
    </extent>
    <accessory>
        <colon:preexistingPolyp value="serrated adenoma"/>
        <colon:discontinuousExtramuralExtension value="negative"/>
        <lymphovascularInvasion value="inconclusive"/>
        <perineuralInvasion value="inconclusive"/>
        <venousInvasion value="negative"/>
        <treatmentEffect value="slightResponse"/>
    </accessory>
    <margins>
        <margin closest="true" location="proximal" status="negative">
            <distance unit="mm" value="1"/>
        </margin>
        <margin location="proximal" status="negative"/>
        <margin location="distal" status="negative"/>
        <margin location="circumferential" status="negative"/>
    </margins>
    <nodes>
        <nodeGroup laterality="right" location="anorectal">
            <nodeStatus count="6" value="total"/>
            <nodeStatus count="4" value="positive"/>
            <nodeStatus count="2" value="regressed"/>
        </nodeGroup>
        <nodeGroup laterality="right" location="anterior cecal">
            <nodeStatus count="7" value="total"/>
        </nodeGroup>
    </nodes>
    <stage>
        <classification value="p"/>
        <T value="2"/>
        <N value="0"/>
        <M value="X"/>
        <prefix value="a r y"/>
    </stage>
</synopsis>
