<!DOCTYPE	grammar [
<!ENTITY	items  		"../framework/items.rng">
<!ENTITY	sections  	"../framework/sections.rng">
<!ENTITY	section		"../framework/types/section.rng">
<!ENTITY    length      "../framework/types/length.rng">
<!ENTITY	percent  	"../framework/types/percent.rng">
<!ENTITY	quantity    "../framework/types/quantity.rng">
<!ENTITY	ratio  		"../framework/types/ratio.rng">
<!ENTITY	selectMany  "../framework/types/selectMany.rng">
<!ENTITY	selectOne  	"../framework/types/selectOne.rng">
<!ENTITY	size  		"../framework/types/size.rng">
<!ENTITY	tally  		"../framework/types/tally.rng">
<!ENTITY	weight  	"../framework/types/weight.rng">
<!ENTITY    complex     "../framework/complexFrame.rng">
]>
<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://purl.org/pathology/ecc/"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <!--=============================================================-->
    <include href="values.rng"/>
    <!--=============================================================-->
    <start>
        <ref name="resection"/>
    </start>
    <!--=============================================================-->
    <include href="&sections;">
        <define name="schemaLocation">
            <value>http://purl.org/pathology/ecc/lung.rng</value>
        </define>
        <define name="version">
            <value>1.0a</value>
        </define>
        <define name="semantics">
            <value>http://cap#lung/snomedct/ http://cap#lung/radlex/</value>
        </define>
    </include>
    <!--=============================================================-->
    <a:documentation>HISTORY section customizations</a:documentation>
    <!--=============================================================-->
    <define name="history.smoking">
        <optional>
            <element name="smoking">
                <grammar>
                    <include href="&quantity;">
                        <define name="values">
                            <data type="integer">
                                <param name="minInclusive">0</param>
                            </data>
                        </define>
                        <define name="unit.values">
                            <value>pack-year</value>
                        </define>
                    </include>
                </grammar>
            </element>
        </optional>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="tumor.principalFocus.extension">
        <ref name="tumor.focus.pleuralInvasion"/>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="tumor.additionalFocus.extension">
        <ref name="tumor.focus.pleuralInvasion"/>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="tumor.focus.pleuralInvasion">
        <element name="pleuralInvasion">
            <grammar>
                <include href="&selectOne;"/>
                <define name="values">
                    <choice>
                        <parentRef name="tumor.focus.pleuralInvasion.values"/>
                        <parentRef name="base.values"/>
                    </choice>
                </define>
            </grammar>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="extent.extension">
        <element name="postobstructiveChanges">
            <grammar>
                <include href="&selectOne;"/>
                <define name="values">
                    <choice>
                        <parentRef name="extent.postobstructive.values"/>
                        <parentRef name="base.values"/>
                    </choice>
                </define>
            </grammar>
        </element>
        <oneOrMore>
            <element name="malignantEffusion">
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="item.extension">
                        <attribute name="of">
                            <choice>
                                <parentRef name="extent.malignantEffusion.of.values"/>
                                <parentRef name="base.values"/>
                            </choice>
                        </attribute>
                        <optional>
                            <attribute name="laterality">
                                <parentRef name="extended.laterality.values"/>
                            </attribute>
                        </optional>
                    </define>
                    <define name="values">
                        <parentRef name="qualitative.values"/>
                    </define>
                </grammar>
            </element>
        </oneOrMore>
    </define>
    
</grammar>
