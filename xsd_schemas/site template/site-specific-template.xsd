    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <xs:include schemaLocation="../framework/types.xsd"/>
    <xs:include schemaLocation="values.xsd"/>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <xs:redefine schemaLocation="../framework/common.xsd">
        <xs:attributeGroup name="generic.attrib">
            <xs:attributeGroup ref="ecc:generic.attrib"/>
            <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
            <!-- add any site-specific "universal" attributes here (optional) -->
            <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
