<xs:schema elementFormDefault="qualified" targetNamespace="http://purl.org/pathology/ecc/"
    xmlns:data-view="http://www.w3.org/2003/g/data-view#" xmlns:ecc="http://purl.org/pathology/ecc/"
    xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <!-- Generic content definitions -->
    <xs:group name="generic.content">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="0" name="label" type="xs:string"/>
            <xs:element maxOccurs="1" minOccurs="0" name="comment" type="xs:string"/>
            <xs:any maxOccurs="unbounded" minOccurs="0" namespace="##other" processContents="skip"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="generic.response.content">
        <xs:sequence>
            <xs:element minOccurs="0" maxOccurs="1" name="specify" type="xs:string"/>
            <xs:group minOccurs="0" maxOccurs="1" ref="ecc:generic.content"/>
        </xs:sequence>
    </xs:group>
    <xs:attributeGroup name="item.attrib">
        <!-- placeholder only -->
    </xs:attributeGroup>
    <xs:attributeGroup name="section.attrib">
        <!-- placeholder only -->
    </xs:attributeGroup>
    <xs:attributeGroup name="generic.attrib">
        <xs:attribute name="id" type="xs:ID"/>
        <!-- I would much prefer to use xml:id for this. However, the limitations of xml schema are
            such that attributes from foreign namespaces must be imported with a @schemaLocation
            attribute on the xs:import element. Unfortunately, MS Infopath is unable to resolve
            xs:import elements on a schema. So I'll have to use id noNamespace. -->
        <!-- <xs:attribute ref="xml:id"/> -->
    </xs:attributeGroup>
</xs:schema>
