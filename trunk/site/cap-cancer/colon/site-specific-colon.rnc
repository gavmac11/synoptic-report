default namespace = "http://www.cap.org/pert/2009/01/colon/"
namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

start = notAllowed

## Procedure section values
div {
  procedure-values =
    "total colectomy"
    | "right hemicolectomy"
    | "transverse colectomy"
    | "left hemicolectomy"
    | "segmental colectomy"
    | "abdominoperineal resection"
    | "proctocolectomy"
  site-values =
    "cecum"
    | "right colon"
    | "hepatic flexure"
    | "transverse colon"
    | "splenic flexure"
    | "left colon"
    | "sigmoid colon"
    | "rectum"
    | "anus"
