<resection schemaLocation="http://purl.org/pathology/ecc/breast.rng"
    version="1.0a" xmlns="http://purl.org/pathology/ecc/"
    xmlns:grddl="http://www.w3.org/2003/g/data-view#"
    grddl:transformation="http://www.cancerstaging.org/csv2#">
    <history>
        <clinicalFinding>
            <response value="specify">
                <specify>breast lump</specify>
            </response>
        </clinicalFinding>  
        <clinicalFinding>
            <response value="unreported"/>
        </clinicalFinding>    
        <priorTherapy>
            <response value="specify">
                <specify>herbal therapy</specify>
            </response>
        </priorTherapy>
        <radiologicFinding>       
            <response value="specify">
                <specify>2 cm lump in upper outer quadrant</specify>
            </response>
        </radiologicFinding>
    </history>
    <specimen>
        <procedure>
            <response value="total mastectomy"/>
        </procedure>
        <size>
            <response unit="cm" value="24"/>
            <response unit="cm" value="12"/>
        </size>
        <weight>
            <response unit="g" value="100"/>
        </weight>
        <site>
            <response value="partial breast"></response>
            <response value="axillary tail"></response>
            <response value="total breast"></response>
        </site>
        <integrity>
            <response value="intact"/>
        </integrity>
    </specimen>
    <tumor>
        <focus type="principal">
            <site>
                <response on="right" value="lower inner quadrant"/>
                <response value="axillary tail"/>
                <response value="5:00"/>
            </site>
            <size>
                <response unit="cm" value="1.9"/>
            </size>
            <histologicType>
                <comment>this is not right</comment>
                <label>Histology variety</label>
                <response value="medullary carcinoma">
                    <comment></comment>
                </response>
            </histologicType>
            <grade system="nottingham">
                <result for="glands">
                    <response value="2"/>
                </result>
                <result for="nuclei">
                    <response value="2"/>
                </result>
                <result for="mitoses">
                    <response value="2"/>
                </result>
                <result for="combined">
                    <response value="1"/>
                </result>
            </grade>
        </focus>
        <focus name="additional">
            <site>
                <response on="right" value="lower inner quadrant"/>
            </site>
            <size>
                <response unit="mm" value="3"/>
            </size>
            <multiplicity>
                <response value="many"/>
            </multiplicity>
            <histologicType>
                <response value="ductal carcinoma"/>
            </histologicType>
            <grade system="nottingham">
                <result for="glands">
                    <response value="2"/>
                </result>
                <result for="nuclei">
                    <response value="2"/>
                </result>
                <result for="mitoses">
                    <response value="2"/>
                </result>
                <result for="combined">
                    <response value="1"/>
                </result>
            </grade>
        </focus>
    </tumor>
    <extent>
        <skinInvasion>
            <response value="negative"/>
        </skinInvasion>
        <skinUlceration>
            <response value="negative"/>
        </skinUlceration>
        <skinSatelliteNodules>
            <response value="negative"/>
        </skinSatelliteNodules>
        <dermalLymphaticInvasion>
            <response value="negative"/>
        </dermalLymphaticInvasion>
        <underlyingStructures>
            <response value="negative"/>
        </underlyingStructures>
        <nipplePagetDisease>
            <response value="negative"/>
        </nipplePagetDisease>
    </extent>
    <accessory>
        <treatmentResponse>
            <response value="slight"/>
        </treatmentResponse>
        <lymphVascularInvasion>
            <response value="negative"/>
        </lymphVascularInvasion>
        <perineuralInvasion>
            <response value="negative"/>
        </perineuralInvasion>
        <microcalcifications>
            <response value="in DCIS"></response>
            <response value="in non-neoplastic tissue"/>
            <response value="in invasive carcinoma"/>
        </microcalcifications>
        <ductalCarcinoma-in-situ>
            <result>
                <response focality="extensive" value="positive"/>
                <!-- what about extensive intraductal component -->
                <!-- best is to use @subtype -->
            </result>
            <size>
                <response unit="cm" value="2"/>
            </size>
            <blocks>
                <result for="total">
                    <response value="23"/>
                </result>
                <result for="positive">
                    <response relation="approximately equal" value="1"/>
                </result>
            </blocks>
            <architecture>
                <response value="cribriform"/>
            </architecture>
            <grade>
                <response value="high"/>
            </grade>
            <necrosis>
                <response value="negative"/>
            </necrosis>
        </ductalCarcinoma-in-situ>
        <lobularCarcinoma-in-situ>
            <result>
                <response value="negative"/>
            </result>
            <size>
                <response unit="cm" value="2"/>
            </size>
            <blocks>
                <result for="total">
                    <response value="10  "/>
                </result>
                <result for="negative" type="RT-PCR negative">
                    <response value="1"/>
                </result>
            </blocks>
        </lobularCarcinoma-in-situ>
    </accessory>
    <margin>
        <status of="medial">
            <result for="in-situ">
                <response value="inapplicable"/>
            </result>
        </status>
        <status of="lateral">
            <result for="invasive">
                <response closest="positive" value="positive"/>
            </result>
            <distance for="invasive">
                <response unit="cm" value="0.5"/>
            </distance>
        </status>
        <status of="anterior">
            <result for="in-situ">
                <response extent="unifocal" value="positive"/>
            </result>
            <result for="invasive">
                <response value="negative"/>
            </result>
            <distance for="invasive">
                <response unit="cm" value="1"/>
            </distance>
        </status>
    </margin>
    <nodes>
        <status of="sentinel" technique="H+E plus immunohistochemistry">
            <result for="total">
                <response value="36"/>
            </result>
            <result for="negative" type="RT-PCR negative">
                <response value="13"/>
            </result>
            <result for="negative" type="necroinflammatory">
                <response value="2"/>
            </result>
            <result for="positive">
                <response value="2"/>
            </result>
            <largestMetastasis>
                <response unit="cm" value="0.1"/>
            </largestMetastasis>
        </status>
    </nodes>
    <distant>
        <status of="lung">
            <result for="clinical history">
                <response value="positive"/>
            </result>
            <size>
                <response unit="mm" value="1.5"/>
            </size>
        </status>
    </distant>
    <studies>
        <estrogenReceptor>
            <result>
                <response unit="percent" value="pending"/>
            </result>
            <technique>
                <response value="immunohistochemistry"/>
            </technique>
            <source>
                <response value="pending"/>
            </source>
            <antibody>
                <response value="inapplicable" vendor="unreported"/>
            </antibody>
            <fixative>
                <response value="neutral buffered formalin"/>
            </fixative>
        </estrogenReceptor>
        <progesteroneReceptor>
            <result>
                <response unit="percent" value="pending"/>
            </result>
            <technique>
                <response value="immunohistochemistry"/>
            </technique>
            <source>
                <response value="pending"/>
            </source>
            <antibody>
                <response value="FERWREJ" vendor=""/>
            </antibody>
            <fixative>
                <response value="neutral buffered formalin"/>
            </fixative>
        </progesteroneReceptor>
        <HER2neu>
            <result>
                <response value="negative (score 0)"/>
            </result>
            <technique>
                <response value="immunohistochemistry"/>
            </technique>
            <source>
                <response value="pending"/>
            </source>
            <antibody>
                <response value="unreported" vendor="unreported"/>
            </antibody>
        </HER2neu>
    </studies>
    <stage>
        <prefix>
            <response value="none"/>
        </prefix>
        <multiplicity>
            <response value="m"/>
        </multiplicity>
        <pT>
            <response value="1b"/>
        </pT>
        <pN>
            <response value="1a"/>
        </pN>
        <pM>
            <response value="1"/>
        </pM>
        <group>
            <response value="IV"/>
        </group>
    </stage>
    <additional>
        <finding>
            <response value="unreported"/>
        </finding>
    </additional>
</resection>
