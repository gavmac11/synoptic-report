default namespace = "http://www.cap.org/pert/2009/01/"

include "baseContent.rnc"
start =
  element size { baseContent, dimension, (dimension, dimension?)? }
dimension =
  element dimension {
    attribute unit { external "lengthUnits.rnc" },
    baseContent,
    element value {
      xsd:decimal { minExclusive = "0.0" }
    }?
  }
