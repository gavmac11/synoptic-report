<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <a:documentation>Utility definitions for value types.</a:documentation>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <start>
        <choice>
            <ref name="date"/>
            <!--<ref name="start-end"/>-->
        </choice>
    </start>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="date">
        <attribute name="date">
            <ref name="dateType"/>
        </attribute>
        <optional>
            <attribute name="start">
                <ref name="dateType"/>
            </attribute>
            <optional>
                <attribute name="end">
                    <ref name="dateType"/>
                </attribute>
            </optional>
        </optional>
        <optional>
            <attribute name="duration">
                <data type="duration"/>
            </attribute>
        </optional>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="start-end">
        <attribute name="start">
            <ref name="dateType"/>
        </attribute>
        <optional>
            <attribute name="end">
                <ref name="dateType"/>
            </attribute>
        </optional>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="dateType">
        <choice>
            <data type="date"/>
            <data type="gYearMonth"/>
            <data type="gYear"/>
            <value>unreported</value>
            <value>inapplicable</value>
            <value>indeterminate</value>
        </choice>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
</grammar>
