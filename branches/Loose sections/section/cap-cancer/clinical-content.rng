<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://www.cap.org/pert/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    xmlns:iso="http://purl.oclc.org/dsdl/schematron">
    <define combine="interleave" name="clinical-content">
        <interleave>
            <zeroOrMore>
                <element name="priorTherapy">
                    <ref name="baseContent"/>
                    <attribute name="value">
                        <ref name="priorTherapyValues"/>
                    </attribute>
                    <optional>
                        <attribute name="date">
                            <choice>
                                <data type="date"/>
                                <data type="gYear"/>
                                <data type="gYearMonth"/>
                            </choice>
                        </attribute>
                    </optional>
                    <optional>
                        <attribute name="duration">
                            <data type="duration"/>
                        </attribute>
                    </optional>
                </element>
            </zeroOrMore>
            <zeroOrMore>
                <element name="clinicalFinding">
                    <ref name="baseContent"/>
                    <attribute name="value">
                        <ref name="clinicalFindingValues"/>
                    </attribute>
                </element>
            </zeroOrMore>
            <zeroOrMore>
                <element name="radiologicFinding">
                    <ref name="baseContent"/>
                    <attribute name="value">
                        <ref name="radiologicFindingValues"/>
                    </attribute>
                </element>
            </zeroOrMore>
        </interleave>
    </define>
    <define name="priorTherapyValues">
        <data type="string"/>
    </define>
    <define name="clinicalFindingValues">
        <data type="string"/>
    </define>
    <define name="radiologicFindingValues">
        <data type="string"/>
    </define>
</grammar>
