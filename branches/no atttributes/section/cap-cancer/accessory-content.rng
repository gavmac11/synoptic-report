<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    ns="http://www.cap.org/pert/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <define combine="interleave" name="accessory-content">
        <interleave>
            <optional>
                <element name="venousInvasion">
                    <element name="value">
                        <ref name="venousInvasionValues"/>
                    </element>
                    <ref name="baseContent"/>
                </element>
            </optional>
            <optional>
                <element name="lymphovascularInvasion">
                    <element name="value">
                        <ref name="lymphaticInvasionValues"/>
                    </element>
                    <ref name="baseContent"/>
                </element>
            </optional>
            <optional>
                <element name="perineuralInvasion">
                    <element name="value">
                        <ref name="perineuralInvasionValues"/>
                    </element>
                    <ref name="baseContent"/>
                </element>
            </optional>
            <optional>
                <element name="treatmentEffect">
                    <element name="value">
                        <ref name="treatmentEffectValues"/>
                    </element>
                    <ref name="baseContent"/>
                </element>
            </optional>
        </interleave>
    </define>
    <define combine="choice" name="venousInvasionValues">
        <externalRef href="../../common/extendedBoolean.rng"/>
    </define>
    <define combine="choice" name="lymphaticInvasionValues">
        <externalRef href="../../common/extendedBoolean.rng"/>
    </define>
    <define combine="choice" name="perineuralInvasionValues">
        <externalRef href="../../common/extendedBoolean.rng"/>
    </define>
    <define combine="choice" name="treatmentEffectValues">
        <choice>
            <value>inapplicable</value>
            <value>noResponse</value>
            <value>slightResponse</value>
            <value>markedResponse</value>
            <value>completeResponse</value>
            <value>other</value>
        </choice>
    </define>
</grammar>
