<!DOCTYPE	grammar [
<!ENTITY    date        "../framework/types/date.rng">
<!ENTITY	items  		"../framework/items.rng">
<!ENTITY	sections  	"../framework/sections.rng">
<!ENTITY	section		"../framework/types/section.rng">
<!ENTITY	percent  	"../framework/types/percent.rng">
<!ENTITY	quantity    "../framework/types/quantity.rng">
<!ENTITY	ratio  		"../framework/types/ratio.rng">
<!ENTITY	selectMany  "../framework/types/selectMany.rng">
<!ENTITY	selectOne  	"../framework/types/selectOne.rng">
<!ENTITY	size  		"../framework/types/size.rng">
<!ENTITY	tally  		"../framework/types/tally.rng">
<!ENTITY	values  	"values.rng">
]>
<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    ns="http://purl.org/pathology/ecc/" xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    xmlns:breast="http://purl.org/pathology/ecc/breast/">
    <!--=============================================================-->
    <include href="&values;"/>
    <!--=============================================================-->
    <start>
        <ref name="resection"/>
    </start>
    <!--=============================================================-->
    <a:documentation>HEADER customizations</a:documentation>
    <!--=============================================================-->
    <include href="&sections;">
        <define name="schemaLocation">
            <value>http://purl.org/pathology/ecc/prostate.rng</value>
        </define>
        <define name="version">
            <value>1.0a</value>
        </define>
        <define name="semantics">
            <value>http://www.cancerstaging.org/csv2#</value>
        </define>
    </include>
    <!--=============================================================-->
    <a:documentation>ACCESSORY section customizations</a:documentation>
    <!--=============================================================-->
    <define name="accessory.extension">
        <empty/>
    </define>
    <!--=============================================================-->
    <a:documentation>ADDITIONAL section customizations</a:documentation>
    <!--=============================================================-->
    <define name="additional.extension">
        <empty/>
    </define>
    <!--=============================================================-->
    <a:documentation>DISTANT section customizations</a:documentation>
    <!--=============================================================-->
    <define name="distant.site.response.extension">
        <empty/>
    </define>
    <!--=============================================================-->
    <a:documentation>EXTENT section customizations</a:documentation>
    <!--=============================================================-->
    <define name="extent.extension">
        <ref name="extent.tumorVolume"/>
        <ref name="extent.extracapsular"/>
        <ref name="extent.seminalVesicle"/>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="extent.tumorVolume">
        <element name="tumorVolume">
            <element name="result">
                <attribute name="for">
                    <value>left</value>
                </attribute>
                <grammar>
                    <include href="&percent;"/>
                </grammar>
            </element>
            <element name="result">
                <attribute name="for">
                    <value>right</value>
                </attribute>
                <grammar>
                    <include href="&percent;"/>
                </grammar>
            </element>
            <element name="result">
                <attribute name="for">
                    <value>bilateral</value>
                </attribute>
                <grammar>
                    <include href="&percent;"/>
                </grammar>
            </element>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="extent.extracapsular">
        <element name="extracapsularExtension">
            <element name="result">
                <attribute name="for">
                    <value>left</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <parentRef name="qualitative.values"/>
                    </define>
                </grammar>
            </element>
            <element name="result">
                <attribute name="for">
                    <value>right</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <parentRef name="qualitative.values"/>
                    </define>
                </grammar>
            </element>
            <zeroOrMore>
                <element name="result">
                    <attribute name="for">
                        <ref name="extent.extracapsular.site.values"/>
                    </attribute>
                    <grammar>
                        <include href="&selectOne;"/>
                        <define name="values">
                            <parentRef name="qualitative.values"/>
                        </define>
                    </grammar>
                </element>
            </zeroOrMore>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="extent.seminalVesicle">
        <element name="seminalVesicleInvasion">
            <element name="result">
                <attribute name="for">
                    <value>left</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <parentRef name="qualitative.values"/>
                    </define>
                    <define name="response.extension">
                        <optional>
                            <attribute name="extent">
                                <parentRef name="focality.values"/>
                            </attribute>
                        </optional>
                    </define>
                </grammar>
            </element>
            <element name="result">
                <attribute name="for">
                    <value>right</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <parentRef name="qualitative.values"/>
                    </define>
                    <define name="response.extension">
                        <optional>
                            <attribute name="extent">
                                <parentRef name="focality.values"/>
                            </attribute>
                        </optional>
                    </define>
                </grammar>
            </element>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="extent.contiguousExtension.to.values">
        <choice>
            <ref name="intrinsic.site.values"/>
            <ref name="extrinsic.site.values"/>
        </choice>
    </define>
    <!--=============================================================-->
    <a:documentation>NODES section customizations</a:documentation>
    <!--=============================================================-->
    <define name="nodes.nodeGroup.extension">
        <empty/>
    </define>
    <!--=============================================================-->
    <a:documentation>SPECIMEN section customizations</a:documentation>
    <!--=============================================================-->
    <define name="specimen.laterality">
        <element name="laterality">
            <grammar>
                <include href="&selectOne;"/>
                <define name="values">
                    <parentRef name="laterality.values"/>
                </define>
            </grammar>
        </element>
    </define>
    <!--=============================================================-->
    <a:documentation>STUDIES section customizations</a:documentation>
    <!--=============================================================-->
    <define name="studies.extension">
        <zeroOrMore>
            <element name="psa">
                <grammar>
                    <include href="&quantity;"/>
                    <define name="values">
                        <data type="decimal">
                            <param name="minInclusive">0.0</param>
                        </data>
                    </define>
                    <define name="unit.values">
                        <value>ng/ml</value>
                    </define>
                    <define name="item.extension">
                        <grammar>
                            <include href="&date;"/>
                        </grammar>
                    </define>
                </grammar>
            </element>
        </zeroOrMore>
    </define>
    <!--=============================================================-->
    <a:documentation>TUMOR section customizations</a:documentation>
    <!--=============================================================-->
    <define combine="choice" name="tumor.grade">
        <element name="grade">
            <attribute name="system">
                <value>gleason</value>
            </attribute>
            <element name="result">
                <attribute name="for">
                    <value>primary</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <data type="string">
                            <param name="pattern">[12345]</param>
                        </data>
                    </define>
                </grammar>
            </element>
            <element name="result">
                <attribute name="for">
                    <value>secondary</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <data type="string">
                            <param name="pattern">[12345]</param>
                        </data>
                    </define>
                </grammar>
            </element>
            <optional>
                <element name="result">
                    <attribute name="for">
                        <value>tertiary</value>
                    </attribute>
                    <grammar>
                        <include href="&selectOne;"/>
                        <define name="values">
                            <data type="string">
                                <param name="pattern">[12345]</param>
                            </data>
                        </define>
                    </grammar>
                </element>
            </optional>
            <element name="result">
                <attribute name="for">
                    <value>sum</value>
                </attribute>
                <grammar>
                    <include href="&selectOne;"/>
                    <define name="values">
                        <data type="string">
                            <param name="pattern">[23456789(10)]</param>
                        </data>
                    </define>
                </grammar>
            </element>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="tumor.dominantFocus">
        <element name="focus">
            <grammar>
                <include href="&section;"/>
                <define name="content">
                    <parentRef name="tumor.principalFocus.content"/>
                </define>
                <define name="extension">
                    <attribute name="name">
                        <value>dominant</value>
                    </attribute>
                </define>
            </grammar>
        </element>
    </define>
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <define name="tumor.content">
        <optional>
            <ref name="tumor.dominantFocus"/>
        </optional>
        <ref name="tumor.type"/>
        <ref name="tumor.grade"/>
        <ref name="tumor.extension"/>
    </define>
    <!--=============================================================-->
</grammar>
