<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0" xmlns:colon="&pert;colon/" xmlns:pert="&pert;">
    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
    <div>
        <include href="&report;common.rng">
            <define combine="choice" name="schemaLocation">
                <value>&repository;</value>
            </define>
            <define name="version">
                <value>&version;</value>
            </define>
        </include>
        <include href="&method;resection.rng"/>
    </div>
    <div>
        <include href="&cap-cancer;clinical.content.rng"/>
    </div>
    <div>
        <a:documentation>Specimen section</a:documentation>
        <include href="&cap-cancer;specimen.content.rng">
            <a:documentation>Site-specific redefines</a:documentation>
            <define combine="choice" name="procedures">
                <externalRef href="&redefine;specimen-procedures.rng"/>
            </define>
            <define combine="choice" name="sites">
                <externalRef href="&redefine;specimen-sites.rng"/>
            </define>
            <define name="integrityValues">
                <externalRef href="&redefine;specimen-integrityValues.rng"/>
            </define>
        </include>
        <define combine="interleave" name="specimen.content">
            <a:documentation>Site-specific new content</a:documentation>
            <interleave>
                <externalRef href="&add;specimen-polyp.rng"/>
            </interleave>
        </define>
    </div>
    <div>
        <a:documentation>Tumor section</a:documentation>
        <include href="&cap-cancer;tumor.content.rng">
            <a:documentation>Site-specific redefines</a:documentation>
            <define name="histologicTypes">
                <externalRef href="&redefine;tumor-histologicTypes.rng"/>
            </define>
            <define name="grades">
                <externalRef href="&redefine;tumor-grades.rng"/>
            </define>
        </include>
        <define combine="interleave" name="tumor.content">
            <a:documentation>Site-specific new content</a:documentation>
            <interleave>
                <externalRef href="&add;tumor-immuneResponse.rng"/>
                <externalRef href="&add;tumor-microsatellite.rng"/>
                <externalRef href="&add;tumor-perforation.rng"/>
            </interleave>
        </define>
    </div>
    <div>
        <a:documentation>Extent section</a:documentation>
        <include href="&cap-cancer;extent.content.rng"/>
        <define combine="interleave" name="extent.content">
            <a:documentation>Site-specific new content</a:documentation>
            <externalRef href="&add;extent-invasion-resection.rng"/>
        </define>
    </div>
    <div>
        <a:documentation>Margin section</a:documentation>
        <include href="&cap-cancer;margin.content.rng">
            <a:documentation>Site-specific redefines</a:documentation>
            <define name="marginLocations">
                <externalRef href="&redefine;margin-locations-resection.rng"/>
            </define>
            <define name="marginStatuses">
                <externalRef href="&redefine;margin-statuses.rng"/>
            </define>
        </include>
    </div>
    <div>
        <a:documentation>Accessory content section</a:documentation>
        <include href="&cap-cancer;accessory.content.rng"/>
        <define combine="interleave" name="accessory.content">
            <interleave>
                <externalRef href="&add;accessory-discontinuousExtension.rng"/>
                <externalRef href="&add;accessory-preexistingPolyp.rng"/>
            </interleave>
        </define>
    </div>
    <div>
        <a:documentation>Nodes section</a:documentation>
        <include href="&cap-cancer;nodes.content.rng">
            <define name="nodeGroups">
                <externalRef href="&redefine;nodes-nodeGroups.rng"/>
            </define>
        </include>
    </div>
    <div>
        <a:documentation>Metastasis section</a:documentation>
        <include href="&cap-cancer;mets.content.rng"/>
    </div>
    <div>
        <a:documentation>Special studies section</a:documentation>
        <include href="&cap-cancer;studies.content.rng"/>
    </div>
    <div>
        <a:documentation>Stage section</a:documentation>
        <include href="&cap-cancer;stage.content.rng">
            <define name="T-values">
                <externalRef href="&redefine;stage-T-values.rng"/>
            </define>
            <define name="N-values">
                <externalRef href="&redefine;stage-N-values.rng"/>
            </define>
            <define name="M-values">
                <externalRef href="&redefine;stage-M-values.rng"/>
            </define>
        </include>
    </div>
    <div>
        <a:documentation>Additional content section</a:documentation>
        <include href="&cap-cancer;additional.content.rng">
            <define name="findings">
                <externalRef href="&redefine;additional-findings.rng"/>
            </define>
        </include>
    </div>
</grammar>
