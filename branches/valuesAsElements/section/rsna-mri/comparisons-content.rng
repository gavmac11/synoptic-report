<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://www.rsna.org/reporting/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <define combine="interleave" name="comparisons.content">
        <zeroOrMore>
            <element name="comparison">
                <ref name="common.standard.content"/>
                <ref name="comparison.content"/>
            </element>
        </zeroOrMore>
    </define>
    <define combine="interleave" name="comparison.content">
        <attribute name="performedDate">
            <choice>
                <data type="dateTime"/>
                <data type="date"/>
                <data type="gYearMonth"/>
                <data type="gYear"/>
            </choice>
        </attribute>
        <attribute name="procedure">
            <ref name="procedureValues"/>
        </attribute>
        <optional>
            <text/>
        </optional>
    </define>
    <define name="procedureValues">
        <choice>
            <value>mri with enhancement</value>
            <value>mri without enhancement</value>
            <value>ct</value>
        </choice>
    </define>
</grammar>
