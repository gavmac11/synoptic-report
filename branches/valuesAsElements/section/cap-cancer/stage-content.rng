<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://www.cap.org/pert/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <define combine="interleave" name="stage.content">
        <interleave>
            <optional>
                <element name="prefix">
                    <ref name="common.standard.content"/>
                    <optional>
                        <element name="value">
                            <list>
                                <ref name="prefix-values"/>
                                <optional>
                                    <ref name="prefix-values"/>
                                    <optional>
                                        <ref name="prefix-values"/>
                                    </optional>
                                </optional>
                            </list>
                        </element>
                    </optional>
                </element>
            </optional>
            <element name="classification">
                <ref name="common.standard.content"/>
                <optional>
                    <element name="value">
                        <ref name="classification-values"/>
                    </element>
                </optional>
            </element>
            <element name="T">
                <ref name="common.standard.content"/>
                <optional>
                    <attribute name="suffix">
                        <ref name="suffix-values"/>
                    </attribute>
                </optional>
                <optional>
                    <element name="value">
                        <ref name="T-values"/>
                    </element>
                </optional>
            </element>
            <element name="N">
                <ref name="common.standard.content"/>
                <optional>
                    <element name="value">
                        <ref name="N-values"/>
                    </element>
                </optional>
            </element>
            <element name="M">
                <ref name="common.standard.content"/>
                <optional>
                    <element name="value">
                        <ref name="M-values"/>
                    </element>
                </optional>
            </element>
        </interleave>
    </define>
    <define name="T-values">
        <choice>
            <value>X</value>
            <value>0</value>
            <value>1</value>
            <value>2</value>
            <value>3</value>
            <value>4</value>
            <value>other</value>
        </choice>
    </define>
    <define name="N-values">
        <choice>
            <value>X</value>
            <value>0</value>
            <value>1</value>
            <value>other</value>
        </choice>
    </define>
    <define name="M-values">
        <choice>
            <value>X</value>
            <value>0</value>
            <value>1</value>
            <value>other</value>
        </choice>
    </define>
    <define name="classification-values">
        <value>p</value>
    </define>
    <define name="prefix-values">
        <choice>
            <value>y</value>
            <value>r</value>
            <value>a</value>
            <value>other</value>
        </choice>
    </define>
    <define name="suffix-values">
        <choice>
            <value>m</value>
        </choice>
    </define>
</grammar>
