<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" ns="http://www.cap.org/pert/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0" xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
    <define combine="interleave" name="mets.content">
        <zeroOrMore>
            <element name="metastasis">
                <ref name="standard.content"/>
                <attribute name="site">
                    <ref name="metastaticSites"/>
                </attribute>
                <attribute name="howDiagnosed">
                    <choice>
                        <value>this accesion</value>
                        <value>prior accession</value>
                        <value>outside report</value>
                        <value>clinical examination</value>
                        <value>other</value>
                    </choice>
                </attribute>
                <optional>
                    <externalRef href="../../common/size.rng"/>
                </optional>
            </element>
        </zeroOrMore>
    </define>
    <define name="metastaticSites">
        <text/>
    </define>
</grammar>
