<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
    ns="http://www.cap.org/pert/2009/01/"
    xmlns="http://relaxng.org/ns/structure/1.0"
    xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0"
    xmlns:iso="http://purl.oclc.org/dsdl/schematron">
    <define combine="interleave" name="clinical.content">
        <interleave>
            <optional>
                <element name="priorTherapies">
                    <interleave>
                        <ref name="standard.content"/>
                        <zeroOrMore>
                            <element name="priorTherapy">
                                <ref name="standard.content"/>
                                <attribute name="description"/>
                                <optional>
                                    <attribute name="date">
                                        <choice>
                                        <data type="date"/>
                                        <data type="gYear"/>
                                        <data type="gYearMonth"/>
                                        </choice>
                                    </attribute>
                                </optional>
                            </element>
                        </zeroOrMore>
                    </interleave>
                </element>
            </optional>
            <optional>
                <element name="clinicalFindings">
                    <ref name="standard.content"/>
                    <zeroOrMore>
                        <element name="clinicalFinding">
                            <ref name="standard.content"/>
                            <optional>
                                <element name="value">
                                    <ref name="clinicalFindingValues"/>
                                </element>
                            </optional>
                        </element>
                    </zeroOrMore>
                </element>
            </optional>
            <optional>
                <element name="radiologicFindings">
                    <ref name="standard.content"/>
                    <zeroOrMore>
                        <element name="radiologicFinding">
                            <ref name="standard.content"/>
                            <optional>
                                <element name="value">
                                    <ref name="radiologicFindingValues"/>
                                </element>
                            </optional>
                        </element>
                    </zeroOrMore>
                </element>
            </optional>
        </interleave>
    </define>
    <define name="clinicalFindingValues">
        <text/>
    </define>
    <define name="radiologicFindingValues">
        <text/>
    </define>
</grammar>
