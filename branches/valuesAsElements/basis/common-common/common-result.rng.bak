<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
   ns="http://www.cap.org/pert/2009/01/" xmlns="http://relaxng.org/ns/structure/1.0"
   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0">
   <start combine="choice">
      <element name="result">
         <ref name="result.attrib"/>
         <ref name="result.content"/>
      </element>
   </start>
   <define combine="interleave" name="result.attrib">
      <empty/>
   </define>
   <define combine="interleave" name="result.content">
      <interleave>
         <element name="value">
            <ref name="result.value.content"/>
            <ref name="result.value.attrib"/>
         </element>
         <optional>
            <element name="otherValue">
               <ref name="result.otherValue.content"/>
               <ref name="result.otherValue.attrib"/>
            </element>
         </optional>
         <parentRef name="common.content"/>
      </interleave>
   </define>
   <define combine="choice" name="result.value.content">
      <data type="token"/>
   </define>
   <define combine="interleave" name="result.value.attrib">
      <optional>
         <attribute name="modifier">
            <parentRef name="result.value.modifier.value"/>
         </attribute>
      </optional>
      <zeroOrMore>
         <parentRef name="anyUserAttribute"/>
      </zeroOrMore>
   </define>
   <define name="result.otherValue.content">
      <data type="token"/>
   </define>
   <define combine="interleave" name="result.otherValue.attrib">
      <zeroOrMore>
         <parentRef name="anyUserAttribute"/>
      </zeroOrMore>
   </define>
</grammar>
