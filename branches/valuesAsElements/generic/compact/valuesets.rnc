namespace a = "http://relaxng.org/ns/compatibility/annotations/1.0"

a:documentation [ "============================================" ]
a:documentation [ "============= BASE SECTION VALUES ==========" ]
a:documentation [ "============================================" ]

## == COMMON VALUES ==
div {
   
   ## for modifier applied to result.value elements that accept a numeric
   ##             value
   result.value.comparison.values =
      "less than" | "less than or equal" | "equal" | "greater than or equal" | "greater than"
   
   ## For observations quantified on a four-value severity scale
   
   ## Maps to scales of {0, 1, 2, 3}, {negative, slight, intermediate, marked}, etc.
   common.severity.values = "none" | "mild" | "moderate" | "severe"
   
   ## Units for length values
   common.lengthUnit.values = "mm" | "cm" | "in" | "other"
   
   ## types of inflammation, used primarily for "additional"
   ##             section
   common.inflammation.values = "acute" | "acute and chronic" | "chronic" | "other"
   
   ## for observations requiring qualification by
   ##             laterality
   common.laterality.values = "right" | "left" | "midline" | "bilateral" | "other"
   
   ## date formats, expressed as a union of XML Schema date
   ##             types
   
   ## "date" format is YYYY-MM-DD, e.g. 2009-12-31
   
   ## "gYearMonth" is YYYY-MM, e.g. 2009-12
   
   ## "gYear" format is YYYY, e.g. 2009
   common.date.values = xsd:date | xsd:gYearMonth | xsd:gYear
   
   ## Values for "yes/no" data items
   
   ## 
   ##             ==============
   ##             == positive ==
   ##             ==============
   ##             synonyms: "yes", "present", "is observed", "is seen", "there is evidence of", etc.
   ##          
   
   ## 
   ##             ==============
   ##             == negative ==
   ##             ==============
   ##             synonyms: "no", "absent", "is not observed", "is not seen", "there is no evidence of", etc.
   ##          
   
   ## 
   ##             ===============
   ##             == equivocal ==
   ##             ===============
   ##             synonyms: "suspicious", "atypical, not diagnostic", "worrisome for", "possibly positive", "favor negative, cannot exclude positive", "favor positive, cannot exclude negative", "on the fence", "borderline finding of", etc.
   ##          
   
   ## 
   ##             ===================
   ##             == indeterminate ==
   ##             ===================
   ##             synonyms: "(technically) uninterpretable", "cannot be (successfully) assessed (for technical reasons)", "obscured by", "artifact interferes with assessment", "assessment attempted, but could not be carried out due to X", etc.
   ##          
   
   ## 
   ##             ==================
   ##             == inapplicable ==
   ##             ==================
   ##             synonyms: "question does not apply", "cannot be assessed (because not represented for evaluation)", "X absent, hence X status cannot be assessed", "wrong specimen type for this assessment", "relevant tissue not present in this specimen", etc.
   ##          
   
   ## 
   ##             ================
   ##             == unreported ==
   ##             ================
   ##             synonyms: "no response", "unanswered", "no answer", "skipped", etc.
   ##          
   common.extendedBoolean.values =
      "positive" | "negative" | "equivocal" | "indeterminate" | "inapplicable" | "not reported"
   
   ## for weight values
   common.weightUnit.values = "g" | "kg" | "other"
}

## == synopsis (ROOT) VALUES ==
div {
   
   ## URI at which schema applicable to this instance can be obtained
   schemaLocation.values |= xsd:anyURI
   
   ## Human-readable schema versioning information
   version.values |= xsd:string
}

## == accessory SECTION VALUES ==
div {
   accessory.venousInvasion.values |= common.extendedBoolean.values
   accessory.lymphovascularInvasion.values |= common.extendedBoolean.values
   accessory.perineuralInvasion.values |= common.extendedBoolean.values
   
   ## Tumor response to (e.g. neoadjuvant) treatment
   accessory.treatmentEffect.values |=
      "inapplicable" | "no response" | "slight response" | "marked response" | "complete response" | "other"
}

