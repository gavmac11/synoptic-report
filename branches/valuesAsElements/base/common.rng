<grammar datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://relaxng.org/ns/structure/1.0"
   xmlns:a="http://relaxng.org/ns/compatibility/annotations/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
   <div>
      <a:documentation>== BASE CONTENT ==</a:documentation>
      <define name="common.content">
         <interleave>
            <ref name="common.standard.content"/>
            <ref name="common.custom.content"/>
         </interleave>
      </define>
      <define name="common.standard.content" ns="http://www.cap.org/pert/2009/01/">
         <interleave>
            <optional>
               <ref name="comment"/>
            </optional>
            <optional>
               <ref name="label"/>
            </optional>
            <zeroOrMore>
               <ref name="text"/>
            </zeroOrMore>
         </interleave>
      </define>
      <define name="common.custom.content">
         <interleave>
            <zeroOrMore>
               <choice>
                  <ref name="anyForeignElement"/>
                  <ref name="anyUserAttribute"/>
               </choice>
            </zeroOrMore>
         </interleave>
      </define>
      <define name="anyForeignElement">
         <element>
            <xi:include href="localNames.xml"/>
            <interleave>
               <zeroOrMore>
                  <choice>
                     <ref name="anyForeignAttribute"/>
                     <ref name="anyForeignElement"/>
                  </choice>
               </zeroOrMore>
            </interleave>
         </element>
      </define>
      <define name="anyForeignAttribute">
         <attribute>
            <xi:include href="userNames.xml"/>
         </attribute>
      </define>
      <define name="anyUserAttribute">
         <a:documentation>Any attribute in a non-null namespace other than the CAP eCC
                namespaces</a:documentation>
         <attribute>
            <xi:include href="localNames.xml"/>
         </attribute>
      </define>
   </div>
   <div>
      <a:documentation>== BASE ELEMENTS ==</a:documentation>
      <define name="comment">
         <element name="comment">
            <text/>
            <ref name="common.custom.content"/>
         </element>
      </define>
      <define name="label">
         <element name="label">
            <text/>
            <ref name="common.custom.content"/>
         </element>
      </define>
      <define name="text">
         <element name="text">
            <mixed>
               <ref name="common.content"/>
            </mixed>
         </element>
      </define>
   </div>
   <div>
      <a:documentation>== COMMON VALUE TYPES ==</a:documentation>
      <define name="common.severity.values">
         <choice>
            <value>none</value>
            <value>mild</value>
            <value>moderate</value>
            <value>marked</value>
         </choice>
      </define>
      <define name="common.lengthUnit.values">
         <choice>
            <value>mm</value>
            <value>cm</value>
            <value>in</value>
         </choice>
      </define>
      <define name="common.inflammation.values">
         <choice>
            <value>acute</value>
            <value>acute and chronic</value>
            <value>chronic</value>
            <value>specify</value>
         </choice>
      </define>
      <define name="common.laterality.values">
         <choice>
            <value>right</value>
            <value>left</value>
            <value>specify</value>
         </choice>
      </define>
      <define name="common.date.values">
         <choice>
            <data type="date"/>
            <data type="gYear"/>
            <data type="gYearMonth"/>
         </choice>
      </define>
      <define name="common.extendedBoolean.values">
         <choice>
            <value>positive</value>
            <value>negative</value>
            <value>indeterminate</value>
            <value>equivocal</value>
            <value>inapplicable</value>
            <value>not reported</value>
         </choice>
      </define>
      <define name="common.weightUnit.values">
         <choice>
            <value>g</value>
            <value>kg</value>
            <value>specify</value>
         </choice>
      </define>
   </div>
   <div>
      <a:documentation>== DIMENSIONAL ELEMENTS ==</a:documentation>
      <define name="laterality">
         <grammar>
            <include href="resultx.rng">
               <define name="valueset">
                  <parentRef name="common.laterality.values"/>
               </define>
            </include>
         </grammar>
      </define>
      <define name="length.content">
         <interleave>
            <element name="unit">
               <ref name="common.lengthUnit.values"/>
            </element>
            <grammar>
               <include href="resultx.rng">
                  <define name="valueset">
                     <data type="decimal">
                        <param name="minExclusive">0.0</param>
                     </data>
                  </define>
               </include>
            </grammar>
         </interleave>
      </define>
      <define name="dimension">
         <element name="dimension">
            <interleave>
               <ref name="length.content"/>
               <ref name="common.content"/>
            </interleave>
         </element>
      </define>
      <define name="length">
         <element name="length">
            <interleave>
               <ref name="length.content"/>
               <ref name="common.content"/>
            </interleave>
         </element>
      </define>
      <define name="common.size">
         <element name="size">
            <interleave>
               <ref name="common.sizeContent"/>
               <ref name="common.content"/>
            </interleave>
         </element>
      </define>
      <define name="common.sizeContent">
         <group>
            <ref name="dimension"/>
            <optional>
               <ref name="dimension"/>
               <optional>
                  <ref name="dimension"/>
               </optional>
            </optional>
         </group>
      </define>
   </div>
</grammar>
